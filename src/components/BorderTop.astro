---
interface Props {
    inset: number   
    colors: string
    delay?: string
    nameAnimation?: string
}

const {inset, colors, delay, nameAnimation} = Astro.props
---
<div 
    class="absolute border-2 border-t-0 rounded-b-full"
    style={`border-color: ${colors}; inset:${inset}rem; top:0; animation: ${nameAnimation} 0.5s both cubic-bezier(0.175, 0.885, 0.32, 1.275); animation-delay: ${delay}ms;`}
></div>